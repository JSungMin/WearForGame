<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="#ffffff" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:src="#FF008C"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView" />
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:src="#CDCDCD"
        android:layout_below="@+id/imageView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  기본 설정"
        android:textColor="#FFFFFF"
        android:textSize="9pt"
        android:textAlignment="center"
        android:layout_marginTop="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="  Step 1."
        android:id="@+id/textView"
        android:textColor="#000000"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />
    <ImageView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/textView"
        android:id="@+id/line2"
        android:src="#05CCE2"
    />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextNickName"
        android:text="닉네임을 입력하세요."
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:textColor="#000000"
        android:textSize="9pt"
        android:layout_below="@+id/line2"
        />
    <EditText
        android:layout_width= "200dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:textColor="#000000"
        android:id="@+id/EditNickName"
        android:layout_height="30dp"
        android:layout_below = "@+id/TextNickName"
        android:background="@drawable/content_req_text_bg"
        />
    <Button
        android:layout_width="60dp"
        android:layout_marginLeft="10dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/EditNickName"
        android:layout_toRightOf="@+id/EditNickName"
        android:layout_toEndOf="@+id/EditNickName"
        android:text="확인"
        android:textSize="7pt"
        android:textColor="#000000"
        android:background="#05CCE2"
        android:id="@+id/okButton"
        />
</RelativeLayout>
